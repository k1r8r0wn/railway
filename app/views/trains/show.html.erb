<p id="notice"><%= notice %></p>

<p>
  <strong>Number:</strong>
  <%= @train.number %>
</p>

<p>
  <strong>On station:</strong>
  <% if @train.current_station.present? %>
    <%= @train.current_station.title %>
  <% else %>
    None
  <% end %>
</p>

<p>
  <strong>Train's route:</strong>
  <% if @train.route.present?%>
    <%= @train.route.name %>
  <%else %>
    None
  <%end%>
</p>

<p>
  <strong>Carriages:</strong>
  <% if @train.carriages.present?%>
   <% @train.carriages_numeration.each do |carriage| %>
      <%= link_to "Carriage â„–#{carriage.number}", carriage %>
    <%end%>
    <%= "#{@train.numeration? ? "(Numeration from beginning of the train)" : "(Numeration from the end of the train)"}"%>
  <%else %>
      There is no carriages.
  <%end%>
</p>

<p>
  <%= link_to "Add new carriage", new_train_carriage_path(@train) %>
</p>

