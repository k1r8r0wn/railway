<%= form_for(@train) do |f| %>
  <%= render 'common/errors', resource: @train %>

  <div class="field">
    <%= f.label :number, 'Number:'%><br>
    <%= f.text_field :number %>
  </div>

  <div class="field">
    <%= f.label :current_station, 'Current station:' %><br>
    <%= f.collection_select :current_station_id, Station.all, :id, :title %>
  </div>

  <div class="field">
    <%= f.label :route, 'Route:' %><br>
    <%= f.collection_select :route_id, Route.all, :id, :name %>
  </div>

  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
